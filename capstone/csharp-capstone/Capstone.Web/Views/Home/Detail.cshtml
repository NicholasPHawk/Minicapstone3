@model DetailViewModel
@{
    ViewData["Title"] = "Detail";
}


<section>
    <div class="park-detail">
    <img src="~/images/parks/@(Model.Park.ParkCode).jpg" class="image-detail" alt="@Model.Park.ParkName Photo">
    <h1>@Model.Park.ParkName</h1>

    <p id="park-description">@(Model.Park.ParkDescription)</p>
    <table class="table-striped">
        <tr>
            <td>State:</td>
            <td>@(Model.Park.State)</td>
        </tr>
        <tr>
            <td>Acreage:</td>
            <td>@(Model.Park.Acreage)</td>
        </tr>
        <tr>
            <td>Elevation:</td>
            <td>@(Model.Park.ElevationInFeet)ft</td>
        </tr>
        <tr>
            <td>Miles of trail:</td>
            <td>@(Model.Park.MilesOfTrail)</td>
        </tr>
        <tr>
            <td>Number of animal species:</td>
            <td>@(Model.Park.NumberOfAnimalSpecies)</td>
        </tr>
        <tr>
            <td>Climate:</td>
            <td>@(Model.Park.Climate)</td>
        </tr>
        <tr>
            <td>Number of campsites:</td>
            <td>@(Model.Park.NumberOfCampsites)</td>
        </tr>
        <tr>
            <td>Year founded:</td>
            <td>@(Model.Park.YearFounded)</td>
        </tr>
        <tr>
            <td>Annual visitor count:</td>
            <td>@(Model.Park.AnnualVistorCount)</td>
        </tr>
        <tr>
            <td>Entry fee:</td>
            <td>$@(Model.Park.EntryFee)</td>
        </tr>
    </table>
    <div>
        <p id="quote">@(Model.Park.InspirationalQuote)</p>
        <p id="quote">-@(Model.Park.InspirationalQuoteSource)</p>
    </div>
</div>
</section>
<section>
    <div class="weather-box">
        <div class="weather-today">
            <p id="today-header">Today</p>
            <img src="~/images/weather/@(Model.Weathers[0].Forecast).png" id="today-image" alt="@(Model.Weathers[0].Forecast) Photo">
            <div class="today-HiLo">
                <p>High @(Model.Weathers[0].High)</p>
                <p>Low @(Model.Weathers[0].Low)</p>
            </div>
            <p id="recommendation">@(Model.Weathers[0].Recommendation)</p>
        </div>
        @for (int i = 1; i < Model.Weathers.Count; i++)
        {
            <div class="weather-day">
                <img src="~/images/weather/@(Model.Weathers[i].Forecast).png" id="day-image" alt="@(Model.Weathers[i].Forecast) Photo">
                <div class="day-HiLo">
                    <p>High @(Model.Weathers[i].High)</p>
                    <p>Low @(Model.Weathers[i].Low)</p>
                </div>
            </div>
        }
    </div>
    @if (Model.TempUnit == "f" || Model.TempUnit == null)
    {
        <form asp-controller="Home" asp-action="Detail" asp-route-parkCode="@(Model.Park.ParkCode)" asp-route-unit="c">
            <button class="button" type="submit">Convert to Celcius</button>
        </form>
    }
    else
    {
        <form asp-controller="Home" asp-action="Detail" asp-route-parkCode="@(Model.Park.ParkCode)" asp-route-unit="f">
            <button class="button" type="submit">Convert to Farenheit</button>
        </form>
    }
</section>
